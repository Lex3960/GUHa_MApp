<div class="collection">
    {{#each model as |alerta|}}
        {{#link-to "ver-alerta" alerta.id class="collection-item"}}
            <span class="badge"> {{moment-format alerta.fecha 'DD/MM/YYYY HH:mm' }} </span>
            {{alerta.titulo}}
        {{/link-to}}

    {{else}}
        <a class="collection-item">
            Sin alertas registradas.
        </a>
    {{/each}}
