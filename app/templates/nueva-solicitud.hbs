{{outlet}}
<div class="row">
    <div class="col s12">
        <h5>Nueva Solicitud</h5>
    </div>
    <hr>
    <form class="col s12">
        <div class="row">
            <div class="col s12">
                <div class="input-field inline">
                    {{input id="titulo" type="text" class="validate" value=model.titulo }}
                    <label for="titulo" data-error="wrong" data-success="right">Titulo</label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col s12">
                <div class="input-field inline">
                    {{input id="espacio" type="text" class="validate" value=model.espacio }}
                    <label for="espacio" data-error="wrong" data-success="right">Espacio requerido</label>
                </div>
            </div>
        </div>

         <div class="row">
            <div class="col s12">
              {{#m-wrapper query=".datepicker" method="pickadate"}}
                {{input type="text" class="datepicker" placeholder="Fecha del evento." change=(action 'changeFecha')}}
              {{/m-wrapper}}
            </div>
        </div>

        <div class="row">
            <div class="col s12">
                <div class="input-field inline">
                    {{input id="tiempo" type="text" class="validate" value=model.tiempo }}
                    <label for="tiempo" data-error="wrong" data-success="right">Horario requerido</label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                {{textarea id="textarea1" class="materialize-textarea" value=model.descripcion}}
                <label for="textarea1">Motivo</label>
            </div>
        </div>
    </form>
  </div>

  <nav>
    <div class="nav-content">
        <ul class="tabs tabs-transparent">
            <li class="tab" >
                {{#link-to "solicitudes" class="active"}}
                 <i class="material-icons left">cancel</i>
                    Cancelar
                {{/link-to}}
            </li>
            <li class="tab">
                <a class="active" {{action 'saveSolicitud' model}}>
                  <i class="material-icons right">add</i>
                    Enviar
                </a>
            </li>
        </ul>
    </div>
</nav>