{{outlet}}
<div class="row">
    <div class="col s12">
        <h5>Nueva Alerta</h5>
    </div>
    <hr>
    <form class="col s12">
        <div class="row">
            <div class="col s12">
                <div class="input-field inline">
                  {{input id="titulo" type="text" class="validate" value=model.titulo }}
                  <label for="titulo" data-error="wrong" data-success="right">Motivo</label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                {{textarea id="textarea1" class="materialize-textarea" value=model.descripcion}}
                <label for="textarea1">Descripcion</label>
            </div>
        </div>
    </form>
  </div>

<nav>
    <div class="nav-content">
        <ul class="tabs tabs-transparent">
            <li class="tab" >
                {{#link-to "alertas" class="active"}}
                 <i class="material-icons left">cancel</i>
                    Cancelar
                {{/link-to}}
            </li>
            <li class="tab">
                <a class="active" {{action 'saveAlerta' model}}>
                  <i class="material-icons right">add_alert</i>
                    Publicar
                </a>
            </li>
        </ul>
    </div>
</nav>
